pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                bat label: 'Install npm Package', script: 'npm install'
                //set NO_COLOR=1
                bat label: 'Build the Application', script: 'NO_COLOR=1 npm run cy-login'
                echo 'build successfully'
            }
        }
        stage('deploy') {
            steps {
                //bat label: 'Install npm Package', script: 'npm install'
                set NO_COLOR=1
                bat label: 'Deploy the Application', script: 'npm run cy-sanity'
                echo 'deploy successfully'
            }
        }
        stage('test') {
            steps {
                //bat label: 'Install npm Package', script: 'npm install'
                set NO_COLOR=1
                bat label: 'Run all testcases', script: 'npm run cy-run'
                echo 'tested successfully'
            }
        }
        stage('release') {
            steps {
                //bat label: 'Install npm Package', script: 'npm install'
                set NO_COLOR=1
                bat label: 'Deploy the Application', script: 'npm run cy-apiTest'
                echo 'release successfully'
            }
        }
    }
}